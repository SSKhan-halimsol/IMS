<Window x:Class="IMS.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:IMS.Views"
        Title="Interview Management System"
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#1e1e2e">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,20,0,20" HorizontalAlignment="Center">
            <TextBlock Text="INTERVIEW" 
                       Foreground="#7CFC00"
                       FontSize="36" FontWeight="Bold"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Management System" 
                       Foreground="White"
                       FontSize="20"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Row="0" HorizontalAlignment="Left">
            <Image Source="/Circle1-removebg-preview 1.png" Height="100" Width="100"></Image> </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            
            <Border Background="#D3D3D3" CornerRadius="10" Padding="20" Width="250" Height="200">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Applicant" FontWeight="Bold" FontSize="18" 
                               HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <Border CornerRadius="100">
                        <Image Source="/Photos/applicant.png"  Width="70" Height="70" Margin="0,0,0,15"/>
                    </Border>
                    <Button Content="Enter" Width="120" Height="40"
                            Background="#7CFC00" Foreground="Black" Cursor="Hand"
                            FontSize="16" FontWeight="Bold" Click="btnApplicant_Click"/>
                </StackPanel>
            </Border>

            <Border Background="#D3D3D3" CornerRadius="10" Padding="20" Width="250" Height="200" Margin="40,0,0,0">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Admin" FontWeight="Bold" FontSize="18" 
                               HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <Image Source="/Photos/admin.png"  Width="70" Height="70" Margin="0,0,0,15"/>
                    <Button Content="Login" Width="120" Height="40" Click="Login_click"
                            Background="#7CFC00" Foreground="Black" Cursor="Hand"
                            FontSize="16" FontWeight="Bold"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <StackPanel Grid.Row="2">
            <TextBlock 
                    Text="If you are an Applicant please press Enter button"
                    Foreground="White"
                    FontSize="14"
                    TextAlignment="Center" VerticalAlignment="Bottom"
                    Margin="0,20,0,20"/>
            <Image Source="/Circle1-removebg-preview 2.png" Height="100" Width="100" HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"></Image>
        </StackPanel>
        
    </Grid>
</Window>
