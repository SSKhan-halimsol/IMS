<UserControl x:Class="IMS.Views.Admin.ApplicantDetailControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#0A0E27"
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <!-- Gradient Brushes -->
        <LinearGradientBrush x:Key="GreenGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#10B981" Offset="0"/>
            <GradientStop Color="#059669" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="BlueGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#3B82F6" Offset="0"/>
            <GradientStop Color="#2563EB" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="RedGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#EF4444" Offset="0"/>
            <GradientStop Color="#DC2626" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="CardBackground" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#1A1F3A" Offset="0"/>
            <GradientStop Color="#141829" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="YellowGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#F59E0B" Offset="0"/>
            <GradientStop Color="#D97706" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="PurpleGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#8B5CF6" Offset="0"/>
            <GradientStop Color="#7C3AED" Offset="1"/>
        </LinearGradientBrush>

        <!-- Card Style -->
        <Style x:Key="DetailCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="BorderBrush" Value="#2D3250"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="25" ShadowDepth="0" Opacity="0.6"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Section Title Style -->
        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <!-- Label Style -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#94A3B8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,12,0,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Value Style -->
        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <!-- Tab Item Style -->
        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border" 
                                Background="#1E293B" 
                                CornerRadius="8,8,0,0" 
                                Padding="20,14"
                                Margin="0,0,4,0"
                                BorderBrush="#334155"
                                BorderThickness="1,1,1,0">
                            <ContentPresenter x:Name="ContentSite"
                                            ContentSource="Header"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource BlueGradient}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="Transparent"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#2D3250"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- Action Button Style -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect x:Name="shadow" Color="#000000" BlurRadius="15" ShadowDepth="0" Opacity="0.5"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="shadow"
                                                           Storyboard.TargetProperty="BlurRadius"
                                                           To="20"
                                                           Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="shadow"
                                                           Storyboard.TargetProperty="BlurRadius"
                                                           To="15"
                                                           Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="CommentTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="CaretBrush" Value="#10B981"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#3B82F6"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#3B82F6"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <Grid Grid.Row="0" Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Back Button -->
                <Button Grid.Column="0"
                        Click="BackToApplicants_Click"
                        Background="{StaticResource BlueGradient}"
                        BorderThickness="0"
                        Padding="14"
                        Margin="0,0,20,0"
                        Width="56"
                        Height="56"
                        Style="{StaticResource ActionButton}"
                        VerticalAlignment="Center">
                    <Image Source="/Photos/back.png" Width="28" Height="28"/>
                </Button>

                <!-- Title Section -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="6" 
                            Height="50" 
                            Background="{StaticResource BlueGradient}" 
                            CornerRadius="3"
                            Margin="0,0,16,0"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Applicant Details"
                                   FontSize="32"
                                   Foreground="White"
                                   FontWeight="Bold">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#3B82F6" BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock Text="{Binding ApplicantName}"
                                   FontSize="16"
                                   Foreground="#10B981"
                                   Margin="0,6,0,0"
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <!-- Tab Control -->
            <Border Grid.Row="1" Style="{StaticResource DetailCard}"
                    Background="#0F172A" 
                    CornerRadius="12" 
                    Margin="0,0,0,10"
                    BorderBrush="#1E293B"
                    BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" BlurRadius="25" ShadowDepth="0" Opacity="0.6"/>
                </Border.Effect>

                <TabControl Background="Transparent"
                            BorderThickness="0"
                            Padding="0">
                    <TabControl.Resources>
                        <Style TargetType="TabPanel">
                            <Setter Property="Background" Value="Transparent"/>
                        </Style>
                    </TabControl.Resources>

                    <!-- BASIC INFORMATION TAB -->
                    <TabItem Header="📋 Basic Information">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24" Background="#0F172A">
                            <StackPanel Orientation="Vertical">

                                <!-- Applicant Info Section -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Left Column -->
                                    <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                        <TextBlock Text="Applicant Name" Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Text="{Binding ApplicantName}" Style="{StaticResource ValueStyle}"/>

                                        <TextBlock Text="Father Name" Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Text="{Binding FatherName}" Style="{StaticResource ValueStyle}"/>

                                        <TextBlock Text="CNIC" Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Text="{Binding CNIC}" Style="{StaticResource ValueStyle}"/>

                                        <TextBlock Text="Email" Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Text="{Binding Email}" Style="{StaticResource ValueStyle}"/>

                                        <TextBlock Text="Contact No" Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Text="{Binding ContactNo}" Style="{StaticResource ValueStyle}"/>

                                        <TextBlock Text="Father's Profession" Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Text="{Binding FatherProfession}" Style="{StaticResource ValueStyle}"/>
                                    </StackPanel>

                                    <!-- Right Column -->
                                    <StackPanel Grid.Column="1" Margin="20,0,0,0">
                                        <TextBlock Text="Date Applied" Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Text="{Binding Date, StringFormat={}{0:yyyy-MM-dd HH:mm}}" Style="{StaticResource ValueStyle}"/>

                                        <TextBlock Text="Marital Status" Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Text="{Binding MaritalStatus}" Style="{StaticResource ValueStyle}"/>

                                        <TextBlock Text="Age" Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Text="{Binding Age}" Style="{StaticResource ValueStyle}"/>

                                        <TextBlock Text="Applied For (Designation)" Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Text="{Binding AppliedFor}" Style="{StaticResource ValueStyle}"/>

                                        <TextBlock Text="Address" Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Text="{Binding Address}" Style="{StaticResource ValueStyle}"/>
                                    </StackPanel>

                                    <!-- Resume Section -->
                                    <Border Background="#1E293B" CornerRadius="12" Grid.Column="2" MaxHeight="180" MaxWidth="400" Padding="14" VerticalAlignment="Top" BorderBrush="#334155" BorderThickness="1">
                                        <Border.Effect>
                                            <DropShadowEffect Color="#000000" BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
                                        </Border.Effect>

                                        <StackPanel>
                                            <!-- Header -->
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                                <Border Background="{StaticResource PurpleGradient}" Width="50" Height="50" CornerRadius="25" Margin="0,0,16,0">
                                                    <TextBlock Text="📄"  FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <StackPanel VerticalAlignment="Center">
                                                    <TextBlock Text="Applicant Resume" Foreground="White" FontSize="15" FontWeight="Bold" Margin="0,0,0,4"/>
                                                    <TextBlock Text="View or download the submitted resume" Foreground="#94A3B8" FontSize="12"/>
                                                </StackPanel>
                                            </StackPanel>

                                            <!-- Divider -->
                                            <Border Height="1" Background="#334155" Margin="0,0,0,20"/>


                                            <TextBlock x:Name="ResumeFileNameText" Foreground="LightGray" FontStyle="Italic"/>

                                            <!-- Action Buttons -->
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                                <Button x:Name="ViewResumeBtn" Click="ViewResume_Click" Background="{StaticResource BlueGradient}" Foreground="White" FontWeight="SemiBold"  FontSize="13" Height="35" Width="140" Margin="0,0,12,0" BorderThickness="0" Cursor="Hand" Style="{StaticResource ActionButton}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="👁 " FontSize="16" VerticalAlignment="Center"/>
                                                        <TextBlock Text="View Resume" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </Button>

                                                <Button x:Name="DownloadResumeBtn" Click="DownloadResume_Click" Background="{StaticResource GreenGradient}" Foreground="White" FontWeight="SemiBold" FontSize="13" Height="35" Width="140" BorderThickness="0" Cursor="Hand" Style="{StaticResource ActionButton}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="⬇ " FontSize="16" VerticalAlignment="Center"/>
                                                        <TextBlock Text="Download Resume" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </Button>
                                            </StackPanel>

                                            <!-- Error Message -->
                                            <TextBlock x:Name="ResumeErrorText" Text="Resume file not found or path is invalid" Foreground="#EF4444" FontSize="12" Margin="0,16,0,0" Visibility="Collapsed"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Quiz Section -->
                                    <Border Background="#1E293B" CornerRadius="12" Grid.Column="2" MaxHeight="130" MaxWidth="400" Padding="20" VerticalAlignment="Bottom" BorderBrush="#334155" BorderThickness="1">
                                        <Border.Effect>
                                            <DropShadowEffect Color="#000000" BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
                                        </Border.Effect>

                                        <StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                            <Border Background="DarkCyan" Width="50" Height="50" CornerRadius="25" Margin="0,0,16,0">
                                                <TextBlock Text="❔"  FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                            </Border>
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <TextBlock Text="Applicant Quiz" Foreground="White" FontSize="15" FontWeight="Bold" Margin="0,0,0,4"/>
                                                <TextBlock Text="     " ></TextBlock>
                                                <Button Background="{StaticResource GreenGradient}" Click="ViewQuizDetails_Click" Foreground="White" FontWeight="SemiBold" FontSize="13" Height="35" Width="110" BorderThickness="0" Cursor="Hand" Style="{StaticResource ActionButton}">
                                                    <TextBlock Text="Quiz Details" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                                </Button>
                                            </StackPanel>
                                            
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Quiz Marks: " Foreground="#94A3B8"></TextBlock>
                                            <TextBlock x:Name="QuizMarksText" Text="Loading..." Foreground="White" FontWeight="Bold" Margin="6,0,0,0"/>
                                        </StackPanel>
                                    </StackPanel>
                                    </Border>
                                </Grid>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>


                    <!-- TECHNICAL SKILLS TAB -->
                    <TabItem Header="💻 Technical Skills">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24" Background="#0F172A">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Left Column -->
                                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                    <TextBlock Text="OOP Knowledge" Style="{StaticResource LabelStyle}"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding OOPRating}" Style="{StaticResource ValueStyle}" FontSize="20" FontWeight="Bold" Foreground="#10B981"/>
                                        <TextBlock Text=" / 5" Style="{StaticResource ValueStyle}" Margin="4,0,0,0"/>
                                    </StackPanel>

                                    <TextBlock Text="Database Skills (SQL)" Style="{StaticResource LabelStyle}"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding SQLRating}" Style="{StaticResource ValueStyle}" FontSize="20" FontWeight="Bold" Foreground="#10B981"/>
                                        <TextBlock Text=" / 5" Style="{StaticResource ValueStyle}" Margin="4,0,0,0"/>
                                    </StackPanel>

                                    <TextBlock Text="UI/UX Skills" Style="{StaticResource LabelStyle}"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding UIRating}" Style="{StaticResource ValueStyle}" FontSize="20" FontWeight="Bold" Foreground="#10B981"/>
                                        <TextBlock Text=" / 5" Style="{StaticResource ValueStyle}" Margin="4,0,0,0"/>
                                    </StackPanel>

                                    <TextBlock Text="Current Company" Style="{StaticResource LabelStyle}"/>
                                    <TextBlock Text="{Binding CurrentCompany}" Style="{StaticResource ValueStyle}"/>

                                    <TextBlock Text="Current Salary" Style="{StaticResource LabelStyle}"/>
                                    <TextBlock Text="{Binding CurrentSalary}" Style="{StaticResource ValueStyle}"/>
                                </StackPanel>

                                <!-- Right Column -->
                                <StackPanel Grid.Column="1" Margin="20,0,0,0">
                                    <TextBlock Text="Frameworks Known" Style="{StaticResource LabelStyle}"/>
                                    <TextBlock Text="{Binding Frameworks}" Style="{StaticResource ValueStyle}"/>

                                    <TextBlock Text="Professional Challenges" Style="{StaticResource LabelStyle}"/>
                                    <TextBlock Text="{Binding Challenges}" Style="{StaticResource ValueStyle}"/>

                                    <TextBlock Text="Strengths" Style="{StaticResource LabelStyle}"/>
                                    <TextBlock Text="{Binding Strengths}" Style="{StaticResource ValueStyle}"/>

                                    <TextBlock Text="Weaknesses" Style="{StaticResource LabelStyle}"/>
                                    <TextBlock Text="{Binding Weaknesses}" Style="{StaticResource ValueStyle}"/>
                                </StackPanel>
                            </Grid>
                        </ScrollViewer>
                    </TabItem>

                    <!-- EXPERIENCE & EDUCATION TAB -->
                    <TabItem Header="🎓 Experience / Education">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24" Background="#0F172A">
                            <StackPanel>
                                <TextBlock Text="Experience Duration" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding ExperienceDuration}" Style="{StaticResource ValueStyle}" FontSize="18" FontWeight="SemiBold" Foreground="#10B981"/>

                                <TextBlock Text="Professional Goals" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding Goals}" Style="{StaticResource ValueStyle}"/>

                                <Grid Margin="0,20,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                        <TextBlock Text="CGPA" Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Text="{Binding CGPA}" Style="{StaticResource ValueStyle}" FontSize="20" FontWeight="Bold" Foreground="#10B981"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="20,0,0,0">
                                        <TextBlock Text="University / Institute" Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Text="{Binding EducationInstitute}" Style="{StaticResource ValueStyle}"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </Border>

            <!-- Admin Comment Section -->
            <Border Grid.Row="2" Style="{StaticResource DetailCard}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Border Background="{StaticResource YellowGradient}" Width="4" Height="20" CornerRadius="2" Margin="0,0,12,0"/>
                        <TextBlock Text="Admin Comment" Style="{StaticResource SectionTitle}" Margin="0" VerticalAlignment="Center"/>
                    </StackPanel>

                    <TextBox x:Name="CommentBox"
                             Height="90"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Style="{StaticResource CommentTextBox}"
                             Text="{Binding AdminComment, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                    <Button Content="💾 Save Comment"
                            Click="SaveComment_Click"
                            Background="{StaticResource YellowGradient}"
                            Foreground="White"
                            FontWeight="SemiBold"
                            FontSize="13"
                            Height="44"
                            Width="160"
                            Margin="0,13,0,-8"
                            HorizontalAlignment="Left"
                            BorderThickness="0"
                            Style="{StaticResource ActionButton}"/>
                </StackPanel>
            </Border>

            <!-- Action Buttons Section -->
            <Border Grid.Row="3" Style="{StaticResource DetailCard}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Accept Button -->
                    <Button x:Name="AcceptedBtn"
                            Grid.Column="0"
                            Click="Accepted_Click"
                            Background="{StaticResource GreenGradient}"
                            Foreground="White"
                            FontWeight="SemiBold"
                            FontSize="14"
                            Height="65"
                            Margin="0,0,10,0"
                            BorderThickness="0"
                            Style="{StaticResource ActionButton}">
                        <StackPanel>
                            <TextBlock Text="✓" FontSize="28" HorizontalAlignment="Center"/>
                            <TextBlock Text="Accept" FontSize="13" HorizontalAlignment="Center" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Button>

                    <!-- Reject Button -->
                    <Button x:Name="RejectedBtn"
                            Grid.Column="1"
                            Click="Rejected_Click"
                            Background="{StaticResource RedGradient}"
                            Foreground="White"
                            FontWeight="SemiBold"
                            FontSize="14"
                            Height="65"
                            Margin="5,0"
                            BorderThickness="0"
                            Style="{StaticResource ActionButton}">
                        <StackPanel>
                            <TextBlock Text="✗" FontSize="28" HorizontalAlignment="Center"/>
                            <TextBlock Text="Reject" FontSize="13" HorizontalAlignment="Center" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Button>

                    <!-- Delete Button -->
                    <Button Grid.Column="2"
                            Click="Delete_Click"
                            Background="{StaticResource PurpleGradient}"
                            Foreground="White"
                            FontWeight="SemiBold"
                            FontSize="14"
                            Height="65"
                            Margin="10,0,0,0"
                            BorderThickness="0"
                            Style="{StaticResource ActionButton}">
                        <StackPanel>
                            <TextBlock Text="🗑" FontSize="28" HorizontalAlignment="Center"/>
                            <TextBlock Text="Delete" FontSize="13" HorizontalAlignment="Center" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>
        </Grid>
</UserControl>