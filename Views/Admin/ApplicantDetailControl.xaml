<UserControl x:Class="IMS.Views.Admin.ApplicantDetailControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Black"
             Loaded="UserControl_Loaded">
    <ScrollViewer Margin="20">
        <StackPanel>
            <!-- Back Button -->
            <Button Width="50" Height="35" Margin="0,0,0,20"
                    HorizontalAlignment="Left"
                    Click="BackToApplicants_Click">
                <Image Source="/Photos/back.png" Height="35"></Image>
            </Button>

            <!-- Title -->
            <TextBlock Text="Applicant Details"
                       FontSize="22"
                       Foreground="#92d400"
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>

            <!-- Tab Control -->
            <TabControl Background="#121212"
                        Foreground="White"
                        BorderBrush="#92d400"
                        Margin="0,0,0,20">
                <!-- BASIC INFORMATION TAB -->
                <TabItem Header="Basic Information">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Applicant Name:" Foreground="White" Grid.Row="0" Grid.Column="0"/>
                        <TextBlock Text="{Binding ApplicantName}" Foreground="White" Grid.Row="0" Grid.Column="1"/>

                        <TextBlock Text="Father Name:" Foreground="White" Grid.Row="1" Grid.Column="0"/>
                        <TextBlock Text="{Binding FatherName}" Foreground="White" Grid.Row="1" Grid.Column="1"/>

                        <TextBlock Text="CNIC:" Foreground="White" Grid.Row="2" Grid.Column="0"/>
                        <TextBlock Text="{Binding CNIC}" Foreground="White" Grid.Row="2" Grid.Column="1"/>

                        <TextBlock Text="Email:" Foreground="White" Grid.Row="3" Grid.Column="0"/>
                        <TextBlock Text="{Binding Email}" Foreground="White" Grid.Row="3" Grid.Column="1"/>

                        <TextBlock Text="Contact No:" Foreground="White" Grid.Row="4" Grid.Column="0"/>
                        <TextBlock Text="{Binding ContactNo}" Foreground="White" Grid.Row="4" Grid.Column="1"/>

                        <TextBlock Text="Father's Profession:" Foreground="White" Grid.Row="5" Grid.Column="0"/>
                        <TextBlock Text="{Binding FatherProfession}" Foreground="White" Grid.Row="5" Grid.Column="1"/>

                        <TextBlock Text="Date (Applied):" Foreground="White" Grid.Row="6" Grid.Column="0"/>
                        <TextBlock Text="{Binding Date, StringFormat={}{0:yyyy-MM-dd HH:mm}}" Foreground="White" Grid.Row="6" Grid.Column="1"/>

                        <TextBlock Text="Marital Status:" Foreground="White" Grid.Row="7" Grid.Column="0"/>
                        <TextBlock Text="{Binding MaritalStatus}" Foreground="White" Grid.Row="7" Grid.Column="1"/>

                        <TextBlock Text="Age:" Foreground="White" Grid.Row="8" Grid.Column="0"/>
                        <TextBlock Text="{Binding Age}" Foreground="White" Grid.Row="8" Grid.Column="1"/>

                        <TextBlock Text="Applied for(Designation):" Foreground="White" Grid.Row="9" Grid.Column="0"/>
                        <TextBlock Text="{Binding AppliedFor}" Foreground="White" Grid.Row="9" Grid.Column="1"/>

                        <TextBlock Text="Address:" Foreground="White" Grid.Row="10" Grid.Column="0"/>
                        <TextBlock Text="{Binding Address}" Foreground="White" Grid.Row="10" Grid.Column="1"/>
                    </Grid>
                </TabItem>

                <!-- TECHNICAL SKILLS TAB -->
                <TabItem Header="Technical Skills">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="OOP Knowledge:" Foreground="White" Grid.Row="0" Grid.Column="0"/>
                        <TextBlock Text="{Binding OOPRating}" Foreground="White" Grid.Row="0" Grid.Column="1"/>

                        <TextBlock Text="Database Skills:" Foreground="White" Grid.Row="1" Grid.Column="0"/>
                        <TextBlock Text="{Binding SQLRating}" Foreground="White" Grid.Row="1" Grid.Column="1"/>

                        <TextBlock Text="UI Skills:" Foreground="White" Grid.Row="2" Grid.Column="0"/>
                        <TextBlock Text="{Binding UIRating}" Foreground="White" Grid.Row="2" Grid.Column="1"/>

                        <TextBlock Text="Current Company:" Foreground="White" Grid.Row="3" Grid.Column="0"/>
                        <TextBlock Text="{Binding CurrentCompany}" Foreground="White" Grid.Row="3" Grid.Column="1"/>

                        <TextBlock Text="Current Salary:" Foreground="White" Grid.Row="4" Grid.Column="0"/>
                        <TextBlock Text="{Binding CurrentSalary}" Foreground="White" Grid.Row="4" Grid.Column="1"/>

                        <TextBlock Text="Challenges faced:" Foreground="White" Grid.Row="5" Grid.Column="0"/>
                        <TextBlock Text="{Binding Challenges}" Foreground="White" Grid.Row="5" Grid.Column="1"/>

                        <TextBlock Text="Frameworks Known:" Foreground="White" Grid.Row="6" Grid.Column="0"/>
                        <TextBlock Text="{Binding Frameworks}" Foreground="White" Grid.Row="6" Grid.Column="1"/>

                        <TextBlock Text="Strengths:" Foreground="White" Grid.Row="7" Grid.Column="0"/>
                        <TextBlock Text="{Binding Strengths}" Foreground="White" Grid.Row="7" Grid.Column="1"/>

                        <TextBlock Text="Weaknesses:" Foreground="White" Grid.Row="8" Grid.Column="0"/>
                        <TextBlock Text="{Binding Weaknesses}" Foreground="White" Grid.Row="8" Grid.Column="1"/>
                    </Grid>
                </TabItem>

                <!-- EXPERIENCE & EDUCATION TAB -->
                <TabItem Header="Experience / Education">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Experience Duration:" Foreground="White" Grid.Row="0" Grid.Column="0"/>
                        <TextBlock Text="{Binding ExperienceDuration}" Foreground="White" Grid.Row="0" Grid.Column="1"/>

                        <TextBlock Text="Goals:" Foreground="White" Grid.Row="1" Grid.Column="0"/>
                        <TextBlock Text="{Binding Goals}" Foreground="White" Grid.Row="1" Grid.Column="1"/>

                        <TextBlock Text="CGPA:" Foreground="White" Grid.Row="2" Grid.Column="0"/>
                        <TextBlock Text="{Binding CGPA}" Foreground="White" Grid.Row="2" Grid.Column="1"/>

                        <TextBlock Text="University:" Foreground="White" Grid.Row="3" Grid.Column="0"/>
                        <TextBlock Text="{Binding EducationInstitute}" Foreground="White" Grid.Row="3" Grid.Column="1"/>
                    </Grid>
                </TabItem>
            </TabControl>

            <TextBlock Text="Delete applicant" Foreground="White"></TextBlock>
            <Button Width="50"  Height="44" Margin="0,10,0,10" HorizontalAlignment="Left" Background="Transparent" Click="Delete_Click">
                <Image Source="C:\Users\Shahbaz\source\repos\IMS\Photos\delete.png" Height="40" Width="50"></Image>
            </Button>

            <!-- Comment Section -->
            <TextBlock Text="Admin Comment:" Foreground="White" FontSize="14"/>
            <TextBox x:Name="CommentBox"
                     Height="80"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     Margin="0,4,0,8"
                     Text="{Binding AdminComment, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <Button Content="Save Comment ⌯⌲"
                    Background="#92d400"
                    Foreground="Black"
                    Width="120" FontWeight="Bold"
                    Height="35"
                    HorizontalAlignment="Left"
                    Click="SaveComment_Click"/>

            <!-- Accept/Reject Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button x:Name="AcceptedBtn"
                        Width="50" Cursor="Hand"
                        Height="35" BorderThickness="0"
                        Margin="10,0"
                        Background="Transparent"
                        Foreground="White"
                        Click="Accepted_Click">
                    <Image Source="/Photos/accept.png" Height="30" Width="60"></Image>
                </Button>

                <Button x:Name="RejectedBtn"
                        Width="50" Cursor="Hand"
                        Height="35" BorderThickness="0"
                        Margin="10,0"
                        Background="Transparent"
                        Foreground="White"
                        Click="Rejected_Click">
                    <Image Source="C:\Users\Shahbaz\source\repos\IMS\Photos\reject.png"  Height="30" Width="60"></Image>
                </Button>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</UserControl>