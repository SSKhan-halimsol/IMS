<UserControl x:Class="IMS.Views.Admin.ApplicantDetailControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#0A0E27"
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <!-- Gradient Brushes -->
        <LinearGradientBrush x:Key="GreenGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#10B981" Offset="0"/>
            <GradientStop Color="#059669" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="BlueGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#3B82F6" Offset="0"/>
            <GradientStop Color="#2563EB" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="RedGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#EF4444" Offset="0"/>
            <GradientStop Color="#DC2626" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="CardBackground" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#1A1F3A" Offset="0"/>
            <GradientStop Color="#141829" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="YellowGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#F59E0B" Offset="0"/>
            <GradientStop Color="#D97706" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="PurpleGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#8B5CF6" Offset="0"/>
            <GradientStop Color="#7C3AED" Offset="1"/>
        </LinearGradientBrush>

        <!-- Card Style -->
        <Style x:Key="DetailCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="BorderBrush" Value="#2D3250"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="15" ShadowDepth="0" Opacity="0.5"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Label Style -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#94A3B8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,8,0,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Value Style -->
        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>

        <!-- Tab Item Style -->
        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border" 
                                Background="#1E293B" 
                                CornerRadius="6,6,0,0" 
                                Padding="12,8"
                                Margin="0,0,2,0"
                                BorderBrush="#334155"
                                BorderThickness="1,1,1,0">
                            <ContentPresenter x:Name="ContentSite"
                                            ContentSource="Header"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource BlueGradient}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="Transparent"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#2D3250"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- Action Button Style -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect x:Name="shadow" Color="#000000" BlurRadius="10" ShadowDepth="0" Opacity="0.4"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="shadow"
                                                           Storyboard.TargetProperty="BlurRadius"
                                                           To="15"
                                                           Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="shadow"
                                                           Storyboard.TargetProperty="BlurRadius"
                                                           To="10"
                                                           Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="CommentTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="CaretBrush" Value="#10B981"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled" Margin="0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#3B82F6"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#3B82F6"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.08*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="0.4*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.02*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.02*"/>
        </Grid.ColumnDefinitions>

        <!-- Header Section -->
        <Grid Grid.Row="0" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Back Button -->
            <Button Grid.Column="0"
                    Click="BackToApplicants_Click"
                    Background="{StaticResource BlueGradient}"
                    BorderThickness="0"
                    Padding="8"
                    Margin="0,0,10,0"
                    Width="40"
                    Height="40"
                    Style="{StaticResource ActionButton}"
                    VerticalAlignment="Center">
                <Image Source="/Photos/back.png" Width="20" Height="20"/>
            </Button>

            <!-- Title Section -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <Border Width="4" 
                        Height="35" 
                        Background="{StaticResource BlueGradient}" 
                        CornerRadius="2"
                        Margin="0,0,10,0"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Applicant Details"
                               FontSize="20"
                               Foreground="White"
                               FontWeight="Bold">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#3B82F6" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <!--<TextBlock Text="{Binding ApplicantName}"
                               FontSize="12"
                               Foreground="#10B981"
                               Margin="0,2,0,0"
                               FontWeight="SemiBold"/>-->
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Tab Control -->
        <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource DetailCard}"
                Background="#0F172A" 
                CornerRadius="8" Height="Auto"
                BorderBrush="#1E293B" Margin="0,5,0,0"
                BorderThickness="1">

            <TabControl Background="Transparent"
                        BorderThickness="0"
                        Padding="0">
                <TabControl.Resources>
                    <Style TargetType="TabPanel">
                        <Setter Property="Background" Value="Transparent"/>
                    </Style>
                </TabControl.Resources>

                <!-- BASIC INFORMATION TAB -->
                <TabItem Header="📋 Basic Information">
                    <Grid Margin="15" Background="#0F172A">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.32*"/>
                            <ColumnDefinition Width="0.32*"/>
                            <ColumnDefinition Width="0.36*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Column -->
                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="Applicant Name" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="{Binding ApplicantName}" Style="{StaticResource ValueStyle}"/>

                            <TextBlock Text="Father Name" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="{Binding FatherName}" Style="{StaticResource ValueStyle}"/>

                            <TextBlock Text="CNIC" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="{Binding CNIC}" Style="{StaticResource ValueStyle}"/>

                            <TextBlock Text="Email" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="{Binding Email}" Style="{StaticResource ValueStyle}"/>

                            <TextBlock Text="Contact No" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="{Binding ContactNo}" Style="{StaticResource ValueStyle}"/>

                            <TextBlock Text="Father's Profession" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="{Binding FatherProfession}" Style="{StaticResource ValueStyle}"/>
                        </StackPanel>

                        <!-- Middle Column -->
                        <StackPanel Grid.Column="1" Margin="8,0">
                            <TextBlock Text="Date Applied" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="{Binding Date, StringFormat={}{0:yyyy-MM-dd HH:mm}}" Style="{StaticResource ValueStyle}"/>

                            <TextBlock Text="Marital Status" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="{Binding MaritalStatus}" Style="{StaticResource ValueStyle}"/>

                            <TextBlock Text="Age" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="{Binding Age}" Style="{StaticResource ValueStyle}"/>

                            <TextBlock Text="Applied For" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="{Binding AppliedFor}" Style="{StaticResource ValueStyle}"/>

                            <TextBlock Text="Address" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="{Binding Address}" Style="{StaticResource ValueStyle}"/>
                        </StackPanel>

                        <!-- Right Column - Cards -->
                        <StackPanel Grid.Column="2" Margin="8,0,0,0">
                            <!-- Resume Section -->
                            <Border Background="#1E293B" CornerRadius="8" Padding="10" Margin="0,0,0,8" BorderBrush="#334155" BorderThickness="1">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <Border Background="{StaticResource PurpleGradient}" Width="30" Height="30" CornerRadius="15" Margin="0,0,8,0">
                                            <TextBlock Text="📄" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="Resume" Foreground="White" FontSize="15" FontWeight="Bold"/>
                                            <TextBlock Text="View or download" Foreground="#94A3B8" FontSize="10"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <TextBlock x:Name="ResumeFileNameText" Foreground="LightGray" FontStyle="Italic" FontSize="9" Margin="0,0,0,6"/>

                                    <StackPanel Orientation="Horizontal">
                                        <Button x:Name="ViewResumeBtn" Click="ViewResume_Click" Background="{StaticResource BlueGradient}" Foreground="White" FontWeight="SemiBold" FontSize="15" Height="25" Padding="8,0" Margin="0,0,4,0" BorderThickness="0" Cursor="Hand" Style="{StaticResource ActionButton}">
                                            <TextBlock Text="👁 View" VerticalAlignment="Center"/>
                                        </Button>

                                        <Button x:Name="DownloadResumeBtn" Click="DownloadResume_Click" Background="{StaticResource GreenGradient}" Foreground="White" FontWeight="SemiBold" FontSize="15" Height="25" Padding="8,0" BorderThickness="0" Cursor="Hand" Style="{StaticResource ActionButton}">
                                            <TextBlock Text="⬇ Download" VerticalAlignment="Center"/>
                                        </Button>
                                    </StackPanel>

                                    <TextBlock x:Name="ResumeErrorText" Text="Resume file not found" Foreground="#EF4444" FontSize="9" Margin="0,6,0,0" Visibility="Collapsed"/>
                                </StackPanel>
                            </Border>

                            <!-- Quiz Section -->
                            <Border Background="#1E293B" CornerRadius="8" Padding="10" BorderBrush="#334155" BorderThickness="1">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <Border Background="DarkCyan" Width="30" Height="30" CornerRadius="15" Margin="0,0,8,0">
                                            <TextBlock Text="❔" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="Quiz Results" Foreground="White" FontSize="11" FontWeight="Bold"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                        <TextBlock Text="Marks: " Foreground="#94A3B8" FontSize="10"/>
                                        <TextBlock x:Name="QuizMarksText" Text="Loading..." Foreground="White" FontWeight="Bold" FontSize="10" Margin="4,0,0,0"/>
                                    </StackPanel>

                                    <Button Background="{StaticResource GreenGradient}" Click="ViewQuizDetails_Click" Foreground="White" FontWeight="SemiBold" FontSize="15" Height="25" Padding="8,0" BorderThickness="0" Cursor="Hand" Style="{StaticResource ActionButton}" HorizontalAlignment="Left">
                                        <TextBlock Text="View Details" VerticalAlignment="Center"/>
                                    </Button>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </TabItem>

                <!-- TECHNICAL SKILLS TAB -->
                <TabItem Header="💻 Technical Skills">
                    <Grid Margin="15" Background="#0F172A">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Column -->
                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="OOP Knowledge" Style="{StaticResource LabelStyle}"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding OOPRating}" Style="{StaticResource ValueStyle}" FontSize="16" FontWeight="Bold" Foreground="#10B981"/>
                                <TextBlock Text=" / 5" Style="{StaticResource ValueStyle}" Margin="2,0,0,0"/>
                            </StackPanel>

                            <TextBlock Text="Database Skills (SQL)" Style="{StaticResource LabelStyle}"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding SQLRating}" Style="{StaticResource ValueStyle}" FontSize="16" FontWeight="Bold" Foreground="#10B981"/>
                                <TextBlock Text=" / 5" Style="{StaticResource ValueStyle}" Margin="2,0,0,0"/>
                            </StackPanel>

                            <TextBlock Text="UI/UX Skills" Style="{StaticResource LabelStyle}"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding UIRating}" Style="{StaticResource ValueStyle}" FontSize="16" FontWeight="Bold" Foreground="#10B981"/>
                                <TextBlock Text=" / 5" Style="{StaticResource ValueStyle}" Margin="2,0,0,0"/>
                            </StackPanel>

                            <TextBlock Text="Current Company" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="{Binding CurrentCompany}" Style="{StaticResource ValueStyle}"/>

                            <TextBlock Text="Current Salary" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="{Binding CurrentSalary}" Style="{StaticResource ValueStyle}"/>
                        </StackPanel>

                        <!-- Right Column -->
                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                            <TextBlock Text="Frameworks Known" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="{Binding Frameworks}" Style="{StaticResource ValueStyle}"/>

                            <TextBlock Text="Professional Challenges" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="{Binding Challenges}" Style="{StaticResource ValueStyle}"/>

                            <TextBlock Text="Strengths" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="{Binding Strengths}" Style="{StaticResource ValueStyle}"/>

                            <TextBlock Text="Weaknesses" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="{Binding Weaknesses}" Style="{StaticResource ValueStyle}"/>
                        </StackPanel>
                    </Grid>
                </TabItem>

                <!-- EXPERIENCE & EDUCATION TAB -->
                <TabItem Header="🎓 Experience / Education">
                    <Grid Margin="15" Background="#0F172A">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0">
                            <TextBlock Text="Experience Duration" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="{Binding ExperienceDuration}" Style="{StaticResource ValueStyle}" FontSize="14" FontWeight="SemiBold" Foreground="#10B981"/>
                        </StackPanel>

                        <Grid Grid.Row="1" Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                <TextBlock Text="CGPA" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding CGPA}" Style="{StaticResource ValueStyle}" FontSize="16" FontWeight="Bold" Foreground="#10B981"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                <TextBlock Text="University / Institute" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding EducationInstitute}" Style="{StaticResource ValueStyle}"/>
                            </StackPanel>
                        </Grid>

                        <StackPanel Grid.Row="2" Margin="0,8,0,0">
                            <TextBlock Text="Professional Goals" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="{Binding Goals}" Style="{StaticResource ValueStyle}"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
            </TabControl>
        </Border>

        <!-- Admin Comment Section -->
        <Border Grid.Row="2" Grid.Column="1" Style="{StaticResource DetailCard}" Margin="0,10,0,5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="1.2*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,6">
                    <Border Background="{StaticResource YellowGradient}" Width="3" Height="14" CornerRadius="2" Margin="0,0,8,0"/>
                    <TextBlock Text="Admin Comment" Foreground="White" FontSize="15" FontWeight="SemiBold" VerticalAlignment="Center"/>
                </StackPanel>

                <TextBox x:Name="CommentBox"
                         Grid.Row="1"
                         TextWrapping="Wrap"
                         AcceptsReturn="True" FontSize="14"
                         VerticalScrollBarVisibility="Hidden"
                         Style="{StaticResource CommentTextBox}"
                         Text="{Binding AdminComment, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <Button Grid.Row="2"
                        Content="💾 Save Comment"
                        Click="SaveComment_Click"
                        Background="{StaticResource YellowGradient}"
                        Foreground="White"
                        FontWeight="SemiBold"
                        FontSize="10"
                        Height="40"
                        Padding="12,0"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Left"
                        BorderThickness="0"
                        Style="{StaticResource ActionButton}"/>
            </Grid>
        </Border>

        <!-- Action Buttons Section -->
        <Border Grid.Row="3" Grid.Column="1" Style="{StaticResource DetailCard}" Height="Auto" VerticalAlignment="Bottom">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Accept Button -->
                <Button x:Name="AcceptedBtn"
                        Grid.Column="0"
                        Click="Accepted_Click"
                        Background="{StaticResource GreenGradient}"
                        Foreground="White"
                        FontWeight="SemiBold"
                        FontSize="11"
                        Margin="0,0,4,0"
                        BorderThickness="0"
                        Style="{StaticResource ActionButton}">
                    <StackPanel>
                        <TextBlock Text="✓" FontSize="20" HorizontalAlignment="Center"/>
                        <TextBlock Text="Accept" FontSize="10" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>

                <!-- Reject Button -->
                <Button x:Name="RejectedBtn"
                        Grid.Column="1"
                        Click="Rejected_Click"
                        Background="{StaticResource RedGradient}"
                        Foreground="White"
                        FontWeight="SemiBold"
                        FontSize="11"
                        Margin="4,0"
                        BorderThickness="0"
                        Style="{StaticResource ActionButton}">
                    <StackPanel>
                        <TextBlock Text="✗" FontSize="20" HorizontalAlignment="Center"/>
                        <TextBlock Text="Reject" FontSize="10" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>

                <!-- Delete Button -->
                <Button Grid.Column="2"
                        Click="Delete_Click"
                        Background="{StaticResource PurpleGradient}"
                        Foreground="White"
                        FontWeight="SemiBold"
                        FontSize="11"
                        Margin="4,0,0,0"
                        BorderThickness="0"
                        Style="{StaticResource ActionButton}">
                    <StackPanel>
                        <TextBlock Text="🗑" FontSize="20" HorizontalAlignment="Center"/>
                        <TextBlock Text="Delete" FontSize="10" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
    </Grid>
</UserControl>