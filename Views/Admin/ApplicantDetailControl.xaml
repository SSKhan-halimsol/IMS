<UserControl x:Class="IMS.Views.Admin.ApplicantDetailControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Black">
    <ScrollViewer Margin="20">
        
        <StackPanel>
            <Button Content="← Back" Width="90" Height="30" Margin="0,0,0,20" HorizontalAlignment="Left"
        Click="BackToApplicants_Click"/>
            <TextBlock Text="Applicant Details"  FontSize="20" Foreground="#92d400" FontWeight="Bold" Margin="0,0,0,20"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Applicant name :" Foreground="White" Grid.Row="0" Grid.Column="0" FontSize="14"></TextBlock>
                <TextBlock x:Name="ApplicantNameBox" Text="{Binding ApplicantName, UpdateSourceTrigger=PropertyChanged}" FontSize="14" Grid.Row="0" Grid.Column="1" Foreground="White" Margin="0,0,0,8"/>

                <TextBlock Text="Father name :" Foreground="White" Grid.Row="1" Grid.Column="0" FontSize="14"></TextBlock>
                <TextBlock x:Name="FatherNameBox" Text="{Binding FatherName, UpdateSourceTrigger=PropertyChanged}" Foreground="White" Grid.Row="1" Grid.Column="1" FontSize="14" Margin="0,0,0,8"/>

                <TextBlock Text="Email :" Foreground="White" Grid.Row="2" Grid.Column="0" FontSize="14"></TextBlock>
                <TextBlock x:Name="EmailBox" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Foreground="White" Grid.Row="2" Grid.Column="1" FontSize="14" Margin="0,0,0,8"/>

                <TextBlock Text="Contact number :" Foreground="White" Grid.Row="3" Grid.Column="0" FontSize="14"></TextBlock>
                <TextBlock x:Name="ContactBox" Text="{Binding ContactNo, UpdateSourceTrigger=PropertyChanged}" Foreground="White" Grid.Row="3" Grid.Column="1" FontSize="14" Margin="0,0,0,8"/>

                <TextBlock Text="Experience :" Foreground="White" Grid.Row="4" Grid.Column="0" FontSize="14"></TextBlock>
                <TextBlock x:Name="ExperienceBox" Text="{Binding ExperienceDuration, UpdateSourceTrigger=PropertyChanged}" Foreground="White" Grid.Row="4" Grid.Column="1" FontSize="14" Margin="0,0,0,8"/>

                <TextBlock Text="Date (When Applied) :" Foreground="White" Grid.Row="5" Grid.Column="0" FontSize="14"></TextBlock>
                <TextBlock Text="{Binding Date, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:yyyy-MM-dd HH:mm}}" Foreground="White" FontSize="14" Grid.Row="5" Grid.Column="1" Margin="0,0,0,20"/>

                
            </Grid>

           
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
            </Grid>
            <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    Margin="0,10,0,0">
                
                <Button Content="Delete" Height="35"
                    Width="100" HorizontalAlignment="Center"
                    Margin="5"
                    Background="Red"
                    Foreground="White"
                    Click="Delete_Click"/>
            </StackPanel>
            <TextBlock Text="Admin Comment:" Grid.Row="1" Foreground="White" FontSize="14" VerticalAlignment="Bottom"/>
            <TextBox x:Name="CommentBox" Height="80" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,4,0,8" Text="{Binding AdminComment, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Content="Save Comment" Background="AliceBlue" Foreground="Black" Width="120" Height="35" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="SaveComment_Click"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="AcceptedBtn" Content="Accept" Width="90" Height="30" Background="Green" Foreground="White"
                            IsEnabled="{Binding IsDecisionMade, Converter={StaticResource BoolToVisibilityConverter}}" Click="Accepted_Click" Margin="0,0,10,0"/>

                <Button x:Name="RejectedBtn" Content="Reject" Width="90" Height="30" Background="Red" Foreground="White"
                            IsEnabled="{Binding IsDecisionMade, Converter={StaticResource BoolToVisibilityConverter}}" Click="Rejected_Click"/>
            </StackPanel>
            
        </StackPanel>
    </ScrollViewer>
</UserControl>