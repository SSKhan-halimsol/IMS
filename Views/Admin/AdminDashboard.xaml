<Window x:Class="IMS.Views.Admin.AdminDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Dashboard - Interview Management System"
        WindowState="Maximized"
        Background="#0A0E27"
        MinWidth="1024" MinHeight="720">

    <Window.Resources>
        <!-- Gradient Brushes -->
        <LinearGradientBrush x:Key="SidebarGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#0F1419" Offset="0"/>
            <GradientStop Color="#1A1F2E" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="AccentGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#10B981" Offset="0"/>
            <GradientStop Color="#059669" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- Navigation Button Style -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#94A3B8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                Margin="12,4">
                            <Grid>
                                <!-- Accent Bar -->
                                <Border x:Name="accentBar"
                                        Width="4"
                                        HorizontalAlignment="Left"
                                        Background="{StaticResource AccentGradient}"
                                        CornerRadius="0,2,2,0"
                                        Opacity="0"/>

                                <!-- Content -->
                                <ContentPresenter Margin="16,0,0,0"
                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover Effect -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="border"
                                                          Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                          To="#1E293B"
                                                          Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="accentBar"
                                                           Storyboard.TargetProperty="Opacity"
                                                           To="1"
                                                           Duration="0:0:0.2"/>
                                            <ColorAnimation Storyboard.TargetProperty="(Button.Foreground).(SolidColorBrush.Color)"
                                                          To="#FFFFFF"
                                                          Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="border"
                                                          Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                          To="Transparent"
                                                          Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="accentBar"
                                                           Storyboard.TargetProperty="Opacity"
                                                           To="0"
                                                           Duration="0:0:0.2"/>
                                            <ColorAnimation Storyboard.TargetProperty="(Button.Foreground).(SolidColorBrush.Color)"
                                                          To="#94A3B8"
                                                          Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>

                            <!-- Active/Selected State -->
                            <Trigger Property="Tag" Value="Active">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#1E293B" Offset="0"/>
                                            <GradientStop Color="#10B98120" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="accentBar" Property="Opacity" Value="1"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <DockPanel LastChildFill="True">
        <!-- Enhanced Sidebar -->
        <Grid DockPanel.Dock="Left" Width="260">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#0F1419" Offset="0"/>
                    <GradientStop Color="#1A1F2E" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Grid.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="30" ShadowDepth="0" Opacity="0.6"/>
            </Grid.Effect>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Top Section -->
            <StackPanel Grid.Row="0" Margin="0,30,0,40">
                <!-- Logo / Title Section -->
                <Border Background="#1E293B" 
                        CornerRadius="16" 
                        Margin="16,0,16,40"
                        Padding="20,24"
                        BorderBrush="#334155"
                        BorderThickness="1">
                    <StackPanel>
                        <!-- Icon/Logo -->
                        <Border Background="{StaticResource AccentGradient}"
                                Width="56"
                                Height="56"
                                CornerRadius="14"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,16">
                            <TextBlock Text="🎯" 
                                       FontSize="28" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect Color="#10B981" BlurRadius="20" ShadowDepth="0" Opacity="0.6"/>
                            </Border.Effect>
                        </Border>

                        <TextBlock Text="INTERVIEW" 
                                   Foreground="White" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,4"/>
                        <TextBlock Text="Management System" 
                                   Foreground="#64748B" 
                                   FontSize="11" 
                                   FontWeight="Medium"
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Navigation Section Label -->
                <TextBlock Text="NAVIGATION" 
                           Foreground="#475569" 
                           FontSize="11" 
                           FontWeight="Bold"
                           Margin="24,0,0,12"/>

                <!-- Navigation Buttons -->
                <Button x:Name="BtnHome" 
                        Content="🏠  Home" 
                        Height="48" 
                        Click="BtnHome_Click"
                        Tag="Active"
                        Style="{StaticResource NavButtonStyle}"/>

                <Button x:Name="BtnApplicants" 
                        Content="👥  Recent Applicants" 
                        Height="48" 
                        Click="BtnApplicants_Click"
                        Style="{StaticResource NavButtonStyle}"/>

                <Button x:Name="BtnSelected" 
                        Content="🏆  Successful Applicants" 
                        Height="48" 
                        Click="Btnsucc_Click"
                        Style="{StaticResource NavButtonStyle}"/>

                <Button x:Name="BtnDesignations" 
                        Content="👔  Designations" 
                        Height="48" 
                        Click="BtnDesignations_Click"
                        Style="{StaticResource NavButtonStyle}"/>

                <Button x:Name="BtnQuiz" 
                        Content="👔  Quiz" 
                        Height="48" 
                        Click="BtnQuiz_Click"
                        Style="{StaticResource NavButtonStyle}"/>
            </StackPanel>

            <!-- Bottom Section -->
            <StackPanel Grid.Row="1" Margin="0,0,0,30">
                <!-- Divider -->
                <Border Height="1" 
                        Background="#334155" 
                        Margin="20,0,20,20"/>

                <!-- User Info Card (Optional) -->
                <Border Background="#1E293B"
                        CornerRadius="12"
                        Padding="16"
                        Margin="16,0,16,20"
                        BorderBrush="#334155"
                        BorderThickness="1">
                    <StackPanel Orientation="Horizontal">
                        <Border Background="{StaticResource AccentGradient}"
                                Width="40"
                                Height="40"
                                CornerRadius="10"
                                Margin="0,0,12,0">
                            <TextBlock Text="👤" 
                                       FontSize="20" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Admin User" 
                                       Foreground="White" 
                                       FontSize="13" 
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="Administrator" 
                                       Foreground="#64748B" 
                                       FontSize="11"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Main Content Area -->
        <Border Background="Transparent" 
                Margin="0">
            <ContentControl x:Name="MainContent"
                            HorizontalAlignment="Stretch" 
                            VerticalAlignment="Stretch"/>
        </Border>
    </DockPanel>
</Window>