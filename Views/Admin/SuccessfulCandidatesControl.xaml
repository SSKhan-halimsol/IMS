<UserControl x:Class="IMS.Views.Admin.SuccessfulCandidatesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:IMS.ViewModels"
             Background="Black">

    <UserControl.DataContext>
        <vm:SuccessfulCandidatesViewModel />
    </UserControl.DataContext>
    
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="Successful Applicants"
                   FontSize="18" Grid.Row="0"
                   FontWeight="Bold"
                   Foreground="#92d400"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,12"/>

        <DataGrid ItemsSource="{Binding AcceptedApplicants}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True" Grid.Row="1"
                  AlternatingRowBackground="#222"
                  RowBackground="#111"
                  Foreground="Black"
                  Background="Black"
                  MouseDoubleClick="ApplicantsGrid_MouseDoubleClick"
                  HeadersVisibility="Column">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="2*"/>
                <DataGridTextColumn Header="Name" Binding="{Binding ApplicantName}" Width="3*"/>
                <DataGridTextColumn Header="CNIC" Binding="{Binding CNIC}" Width="3*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="3*"/>
                <DataGridTextColumn Header="Contact" Binding="{Binding ContactNo}" Width="3*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="3*"/>
            </DataGrid.Columns>
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#333"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="BorderBrush" Value="Gray"/>
                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <!-- Row Styling -->
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="Padding" Value="6,2"/>
                </Style>
            </DataGrid.CellStyle>
        </DataGrid>
    </Grid>
</UserControl>