<Window x:Class="IMS.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Login"
        WindowStartupLocation="CenterScreen"
        Height="450" Width="800"
        Background="Black"
        ResizeMode="NoResize">

    <Border Background="Black" Padding="0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Left panel -->
            <Image Source="/Circle1-removebg-preview 1.png" Height="150" Width="200" 
               HorizontalAlignment="Left"
               VerticalAlignment="Top"></Image>
            <StackPanel Grid.Column="0" Background="Black" VerticalAlignment="Center">
                <TextBlock Text="INTERVIEW"
                       Foreground="#7CFC00"
                       FontSize="36" FontWeight="Bold"
                       HorizontalAlignment="Center"/>
                <TextBlock Text="Management System"
                       Foreground="White"
                       FontSize="20"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"/>

            </StackPanel>
            <Button Content="🏠 Back Home" 
                        Height="44" VerticalAlignment="Bottom"
                        HorizontalAlignment="Left" 
                        Width="140" 
                        Background="#2A2A2A"
                        Foreground="White"
                        BorderThickness="1"
                        BorderBrush="#444444"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Click="back_click"/>
            <!-- Vertical Divider -->
            <Border Grid.Column="0" BorderBrush="White" BorderThickness="0,0,3,0" Height="350"/>

            <!-- Right panel -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
                <TextBlock Text="Welcome" 
                       Foreground="White" 
                       FontSize="24" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0,0,0,5"/>
                <TextBlock Text="Please Login To Admin Dashboard"
                       Foreground="White"
                       FontSize="14"
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <!-- Username -->
                <TextBlock Text="Username :" 
                       Foreground="White" 
                       FontSize="14"/>
                <TextBox Text="{Binding Username, 
                       UpdateSourceTrigger=PropertyChanged}" 
                       Height="35" VerticalContentAlignment="Center"
                       Margin="0,0,0,10"/>

                <!-- Password -->
                <TextBlock Text="Password :" 
                       Foreground="White" 
                       FontSize="14" />
                <PasswordBox x:Name="PasswordBox" 
                             Height="35" VerticalContentAlignment="Center"
                             Margin="0,0,0,20"
                             PasswordChanged="PasswordBox_PasswordChanged"/>

                <!-- Login Button -->
                <Button Content="Login" 
                    Height="40" Width="120"
                    Background="#7CFC00" 
                    Foreground="Black"
                    FontSize="18" 
                    FontWeight="Bold" Command="{Binding LoginCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" />

                
            </StackPanel>
            <Image Grid.Column="1" Source="/Circle1-removebg-preview 2.png" Height="150"
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"></Image>
        </Grid>
    </Border>
</Window>