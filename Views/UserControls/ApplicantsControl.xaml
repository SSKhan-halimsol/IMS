<UserControl x:Class="IMS.Views.ApplicantsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="900"
             Background="#1E1E1E">

    <UserControl.Resources>
        <!-- ComboBox data arrays -->
        <x:Array x:Key="FiveRatings" Type="sys:Int32">
            <sys:Int32>1</sys:Int32>
            <sys:Int32>2</sys:Int32>
            <sys:Int32>3</sys:Int32>
            <sys:Int32>4</sys:Int32>
            <sys:Int32>5</sys:Int32>
        </x:Array>
        <x:Array x:Key="YesNoOptions" Type="sys:String">
            <sys:String>Yes</sys:String>
            <sys:String>No</sys:String>
        </x:Array>
        <x:Array x:Key="MaritalStatusOptions" Type="sys:String">
            <sys:String>Unmarried</sys:String>
            <sys:String>Married</sys:String>
        </x:Array>
        <x:Array x:Key="WillingnessOptions" Type="sys:String">
            <sys:String>Strongly willing</sys:String>
            <sys:String>Willing</sys:String>
            <sys:String>Neither</sys:String>
            <sys:String>Unwilling</sys:String>
            <sys:String>Strongly unwilling</sys:String>
        </x:Array>
        <x:Array x:Key="ExperienceRating" Type="sys:String">
            <sys:String>Fresher</sys:String>
            <sys:String>6 Months</sys:String>
            <sys:String>Less than 5 Years</sys:String>
            <sys:String>Less than 10 Years</sys:String>
            <sys:String>Less than 20 Years</sys:String>
        </x:Array>
        <x:Array x:Key="AppliedForOptions" Type="sys:String">
            <sys:String>.NET developer</sys:String>
            <sys:String>QA Engineer</sys:String>
            <sys:String>Angular developer</sys:String>
            <sys:String>PHP developer</sys:String>
        </x:Array>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock x:Name="StepTitle"
                       FontSize="24" FontWeight="Bold"
                       Foreground="{StaticResource AccentBrush}"
                       Text="Step 1 of 3 - Basic Information"/>
            <Separator Margin="0,10,0,0" Background="{StaticResource AccentBrush}" Height="2"/>
        </StackPanel>

        <!-- Steps Container -->
        <ScrollViewer Grid.Row="1" x:Name="MainScrollViewer"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto"
                      Margin="0">
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Top">
                <!-- Panels for steps -->
                <StackPanel x:Name="Step1Panel" Visibility="Visible" Margin="10" HorizontalAlignment="Stretch">
                    <TextBlock Text="Personal Information" FontSize="18" FontWeight="SemiBold"
                               Foreground="{StaticResource InputForegroundBrush}" Margin="0,0,0,8"/>

                    <TextBlock Text="Full Name *" Foreground="{StaticResource InputForegroundBrush}" Margin="0,4,0,2"/>
                    <TextBox x:Name="FullNameBox" Style="{StaticResource RoundedTextBoxStyle}" HorizontalAlignment="Stretch"/>

                    <TextBlock Text="S/D/W of *" Foreground="{StaticResource InputForegroundBrush}" Margin="0,4,0,2"/>
                    <TextBox x:Name="FatherNameBox" Style="{StaticResource RoundedTextBoxStyle}" HorizontalAlignment="Stretch"/>

                    <TextBlock Text="CNIC *" Foreground="{StaticResource InputForegroundBrush}" Margin="0,4,0,2"/>
                    <TextBox x:Name="CnicBox" Style="{StaticResource RoundedTextBoxStyle}" HorizontalAlignment="Stretch"/>

                    <TextBlock Text="Father's Profession *" Foreground="{StaticResource InputForegroundBrush}" Margin="0,4,0,2"/>
                    <TextBox x:Name="FatherProfessionBox" Style="{StaticResource RoundedTextBoxStyle}" HorizontalAlignment="Stretch"/>

                    <TextBlock Text="Contact No. *" Foreground="{StaticResource InputForegroundBrush}" Margin="0,4,0,2"/>
                    <TextBox x:Name="PhoneBox" Style="{StaticResource RoundedTextBoxStyle}" HorizontalAlignment="Stretch"/>

                    <TextBlock Text="Date *" Foreground="{StaticResource InputForegroundBrush}" Margin="0,4,0,2"/>
                    <DatePicker x:Name="DateBox" Style="{StaticResource RoundedDatePickerStyle}" HorizontalAlignment="Stretch"/>

                    <TextBlock Text="Marital Status *" Foreground="{StaticResource InputForegroundBrush}" Margin="0,4,0,2"/>
                    <ComboBox x:Name="MaritalStatusBox" ItemsSource="{StaticResource MaritalStatusOptions}" SelectedIndex="0" HorizontalAlignment="Stretch"/>

                    <TextBlock Text="Age *" Foreground="{StaticResource InputForegroundBrush}" Margin="0,4,0,2"/>
                    <TextBox x:Name="AgeBox" Style="{StaticResource RoundedTextBoxStyle}" HorizontalAlignment="Stretch"/>

                    <TextBlock Text="Applied For (Designation) *" Foreground="{StaticResource InputForegroundBrush}" Margin="0,4,0,2"/>
                    <ComboBox x:Name="DesignationBox" ItemsSource="{StaticResource AppliedForOptions}" SelectedIndex="0" HorizontalAlignment="Stretch"/>

                    <TextBlock Text="Address *" Foreground="{StaticResource InputForegroundBrush}" Margin="0,4,0,2"/>
                    <TextBox x:Name="AddressBox" Style="{StaticResource RoundedTextBoxStyle}"
                             Height="60" AcceptsReturn="True" TextWrapping="Wrap" HorizontalAlignment="Stretch"/>

                    <TextBlock Text="Email *" Foreground="{StaticResource InputForegroundBrush}" Margin="0,4,0,2"/>
                    <TextBox x:Name="EmailBox" Style="{StaticResource RoundedTextBoxStyle}" HorizontalAlignment="Stretch"/>
                </StackPanel>

                <!-- Step 2 -->
                <StackPanel x:Name="Step2Panel" Visibility="Collapsed" Margin="10" HorizontalAlignment="Stretch">
                    <TextBlock Text="Technical Information" FontSize="16" FontWeight="SemiBold"
                               Foreground="{StaticResource InputForegroundBrush}" Margin="0,0,0,8"/>

                    <TextBlock Text="Why are you leaving your current position?" Foreground="{StaticResource InputForegroundBrush}"/>
                    <TextBox x:Name="LeavingReasonBox" Style="{StaticResource RoundedTextBoxStyle}" HorizontalAlignment="Stretch"/>

                    <TextBlock Text="How do you rate yourself in OOP" Foreground="{StaticResource InputForegroundBrush}"/>
                    <ComboBox x:Name="OopRatingBox" ItemsSource="{StaticResource FiveRatings}" SelectedIndex="0" HorizontalAlignment="Stretch"/>

                    <TextBlock Text="How do you rate yourself in SQL" Foreground="{StaticResource InputForegroundBrush}"/>
                    <ComboBox x:Name="SqlRatingBox" ItemsSource="{StaticResource FiveRatings}" SelectedIndex="0" HorizontalAlignment="Stretch"/>

                    <TextBlock Text="How do you rate yourself in UI" Foreground="{StaticResource InputForegroundBrush}"/>
                    <ComboBox x:Name="UiRatingBox" ItemsSource="{StaticResource FiveRatings}" SelectedIndex="0" HorizontalAlignment="Stretch"/>

                    <TextBlock Text="Are you currently employed?" Foreground="{StaticResource InputForegroundBrush}"/>
                    <ComboBox x:Name="EmployedBox" ItemsSource="{StaticResource YesNoOptions}" SelectedIndex="0" HorizontalAlignment="Stretch"/>

                    <TextBlock Text="Your current company (if any)" Foreground="{StaticResource InputForegroundBrush}"/>
                    <TextBox x:Name="CompanyBox" Style="{StaticResource RoundedTextBoxStyle}" HorizontalAlignment="Stretch"/>

                    <TextBlock Text="Why do you want this job?" Foreground="{StaticResource InputForegroundBrush}"/>
                    <TextBox x:Name="JobReasonBox" Style="{StaticResource RoundedTextBoxStyle}" HorizontalAlignment="Stretch"/>

                    <TextBlock Text="How many times you see the watch in a day?" Foreground="{StaticResource InputForegroundBrush}"/>
                    <TextBox x:Name="WatchCountBox" Style="{StaticResource RoundedTextBoxStyle}" HorizontalAlignment="Stretch"/>

                    <TextBlock Text="Tell about your professional challenges and how you resolved them" Foreground="{StaticResource InputForegroundBrush}"/>
                    <TextBox x:Name="ChallengesBox" Style="{StaticResource RoundedTextBoxStyle}" Height="60" AcceptsReturn="True" TextWrapping="Wrap" HorizontalAlignment="Stretch"/>

                    <TextBlock Text="Tell about your strengths" Foreground="{StaticResource InputForegroundBrush}"/>
                    <TextBox x:Name="StrengthsBox" Style="{StaticResource RoundedTextBoxStyle}" HorizontalAlignment="Stretch"/>

                    <TextBlock Text="Tell about your weaknesses" Foreground="{StaticResource InputForegroundBrush}"/>
                    <TextBox x:Name="WeaknessesBox" Style="{StaticResource RoundedTextBoxStyle}" HorizontalAlignment="Stretch"/>
                </StackPanel>

                <!-- Step 3 -->
                <StackPanel x:Name="Step3Panel" Visibility="Collapsed" Margin="10" HorizontalAlignment="Stretch">
                    <TextBlock Text="Work Experience" FontSize="16" FontWeight="SemiBold"
                               Foreground="{StaticResource InputForegroundBrush}" Margin="0,0,0,8"/>

                    <TextBlock Text="Which framework have you worked with?" Foreground="{StaticResource InputForegroundBrush}"/>
                    <TextBox x:Name="FrameworkBox" Style="{StaticResource RoundedTextBoxStyle}" HorizontalAlignment="Stretch"/>

                    <TextBlock Text="Your experience duration" Foreground="{StaticResource InputForegroundBrush}"/>
                    <ComboBox x:Name="ExperienceBox" ItemsSource="{StaticResource ExperienceRating}" SelectedIndex="0" HorizontalAlignment="Stretch"/>

                    <TextBlock Text="Your professional goals for next 5 years" Foreground="{StaticResource InputForegroundBrush}"/>
                    <TextBox x:Name="GoalsBox" Style="{StaticResource RoundedTextBoxStyle}" Height="60" AcceptsReturn="True" TextWrapping="Wrap" HorizontalAlignment="Stretch"/>

                    <TextBlock Text="Your current salary" Foreground="{StaticResource InputForegroundBrush}"/>
                    <TextBox x:Name="SalaryBox" Style="{StaticResource RoundedTextBoxStyle}" HorizontalAlignment="Stretch"/>

                    <TextBlock Text="Education from which institute?" Foreground="{StaticResource InputForegroundBrush}"/>
                    <TextBox x:Name="EducationBox" Style="{StaticResource RoundedTextBoxStyle}" HorizontalAlignment="Stretch"/>

                    <TextBlock Text="Your CGPA?" Foreground="{StaticResource InputForegroundBrush}"/>
                    <TextBox x:Name="CgpaBox" Style="{StaticResource RoundedTextBoxStyle}" HorizontalAlignment="Stretch"/>

                    <TextBlock Text="How much willing do you have for this job?" Foreground="{StaticResource InputForegroundBrush}"/>
                    <ComboBox x:Name="WillingnessBox" ItemsSource="{StaticResource WillingnessOptions}" SelectedIndex="0" HorizontalAlignment="Stretch"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Navigation buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="BackBtn" Content="← Back" Click="BackBtn_Click" Style="{StaticResource SecondaryButtonStyle}" Visibility="Collapsed"/>
            <Button x:Name="NextBtn" Content="Next →" Click="NextBtn_Click" Style="{StaticResource AccentButtonStyle}"/>
            <Button x:Name="SubmitBtn" Content="Submit" Click="SubmitBtn_Click" Style="{StaticResource AccentButtonStyle}" Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</UserControl>