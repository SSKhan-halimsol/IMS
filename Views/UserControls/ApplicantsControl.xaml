<UserControl x:Class="IMS.Views.ApplicantsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="900"
             Background="#0D0D0D">

    <UserControl.Resources>
        <!-- ComboBox data arrays -->
        <x:Array x:Key="FiveRatings" Type="sys:Int32">
            <sys:Int32>1</sys:Int32>
            <sys:Int32>2</sys:Int32>
            <sys:Int32>3</sys:Int32>
            <sys:Int32>4</sys:Int32>
            <sys:Int32>5</sys:Int32>
        </x:Array>
        <x:Array x:Key="YesNoOptions" Type="sys:String">
            <sys:String>Yes</sys:String>
            <sys:String>No</sys:String>
        </x:Array>
        <x:Array x:Key="MaritalStatusOptions" Type="sys:String">
            <sys:String>Unmarried</sys:String>
            <sys:String>Married</sys:String>
        </x:Array>
        <x:Array x:Key="WillingnessOptions" Type="sys:String">
            <sys:String>Strongly willing</sys:String>
            <sys:String>Willing</sys:String>
            <sys:String>Neither</sys:String>
            <sys:String>Unwilling</sys:String>
            <sys:String>Strongly unwilling</sys:String>
        </x:Array>
        <x:Array x:Key="ExperienceRating" Type="sys:String">
            <sys:String>Fresher</sys:String>
            <sys:String>6 Months</sys:String>
            <sys:String>Less than 5 Years</sys:String>
            <sys:String>Less than 10 Years</sys:String>
            <sys:String>Less than 20 Years</sys:String>
        </x:Array>
        <x:Array x:Key="AppliedForOptions" Type="sys:String">
            <sys:String>.NET developer</sys:String>
            <sys:String>QA Engineer</sys:String>
            <sys:String>Angular developer</sys:String>
            <sys:String>PHP developer</sys:String>
        </x:Array>

        <!-- Enhanced Styles -->
        <Style x:Key="SectionCard" TargetType="Border">
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,12,0,6"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>

        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>
        <!-- Dark ComboBox Style -->
        <Style x:Key="DarkComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="Foreground" Value="#F1F5F9"/>
            <Setter Property="BorderBrush" Value="#475569"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="Border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{Binding SelectedItem.Title, 
                                           RelativeSource={RelativeSource TemplatedParent}}" 
                                           Margin="{TemplateBinding Padding}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left"
                                           Foreground="{TemplateBinding Foreground}"/>

                                    <ToggleButton Grid.Column="1" x:Name="ToggleButton" Focusable="False" IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" 
                                          ClickMode="Press" Background="Transparent" BorderThickness="0" Width="30">
                                        <Path Data="M 0 0 L 4 4 L 8 0 Z" Fill="#94A3B8" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </ToggleButton>
                                </Grid>
                            </Border>

                            <Popup x:Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Border Background="#1E293B" BorderBrush="#14B8A6" BorderThickness="1" CornerRadius="4" Margin="0,4,0,0" MaxHeight="200">
                                    <ScrollViewer Margin="0" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#14B8A6"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#14B8A6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Dark ComboBox Style -->
        <Style x:Key="DarkComboBoxStyle2" TargetType="ComboBox">
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="Foreground" Value="#F1F5F9"/>
            <Setter Property="BorderBrush" Value="#475569"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="Border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{Binding Path=SelectionBoxItem, RelativeSource={RelativeSource TemplatedParent}}"
                                                Margin="{TemplateBinding Padding}"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Left"
                                                Foreground="{TemplateBinding Foreground}"/>

                                    <ToggleButton Grid.Column="1" x:Name="ToggleButton" Focusable="False" IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" 
                                                  ClickMode="Press" Background="Transparent" BorderThickness="0" Width="30">
                                        <Path Data="M 0 0 L 4 4 L 8 0 Z" Fill="#94A3B8" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </ToggleButton>
                                </Grid>
                            </Border>

                            <Popup x:Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Border Background="#1E293B" BorderBrush="#14B8A6" BorderThickness="1" CornerRadius="4" Margin="0,4,0,0" MaxHeight="200">
                                    <ScrollViewer Margin="0" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#14B8A6"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#14B8A6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Progress -->
        <Border Grid.Row="0" Background="#111111" Padding="30,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <Border Background="#9AFF00" CornerRadius="8" Width="6" Height="40" Margin="0,0,15,0"/>
                    <StackPanel>
                        <TextBlock x:Name="StepTitle"
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   Foreground="White"
                                   Text="Step 1 of 3 - Basic Information"/>
                        <TextBlock Text="Please fill in your personal details"
                                   FontSize="13"
                                   Foreground="#888888"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Steps Container -->
        <ScrollViewer Grid.Row="1" x:Name="MainScrollViewer"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Background="#0D0D0D"
                      Padding="30,20">
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Top" MaxWidth="800">
                <!-- Step 1 Panel -->
                <StackPanel x:Name="Step1Panel" Visibility="Visible">
                    <Border Style="{StaticResource SectionCard}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                <Border Background="#9AFF00" Width="40" Height="40" CornerRadius="20" Margin="0,0,12,0">
                                    <TextBlock Text="👤" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Personal Information" Style="{StaticResource SectionTitle}" Margin="0"/>
                                    <TextBlock Text="Tell us about yourself" Foreground="#888888" FontSize="12"/>
                                </StackPanel>
                            </StackPanel>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Full Name *" Style="{StaticResource FieldLabel}"/>
                                    <TextBox x:Name="FullNameBox" Style="{StaticResource RoundedTextBoxStyle}"/>

                                    <TextBlock Text="CNIC *" Style="{StaticResource FieldLabel}"/>
                                    <TextBox x:Name="CnicBox" Style="{StaticResource RoundedTextBoxStyle}"/>

                                    <TextBlock Text="Contact No. *" Style="{StaticResource FieldLabel}"/>
                                    <TextBox x:Name="PhoneBox" Style="{StaticResource RoundedTextBoxStyle}"/>

                                    <TextBlock Text="Marital Status *" Style="{StaticResource FieldLabel}"/>
                                    <ComboBox x:Name="MaritalStatusBox" ItemsSource="{StaticResource MaritalStatusOptions}" SelectedIndex="0" Style="{StaticResource DarkComboBoxStyle2}"/>

                                    <TextBlock Text="Applied For (Designation) *" Style="{StaticResource FieldLabel}"/>
                                    <ComboBox x:Name="DesignationBox" ItemsSource="{StaticResource AppliedForOptions}" 
                                              SelectedIndex="0" DisplayMemberPath="Title" SelectedValuePath="Title" Style="{StaticResource DarkComboBoxStyle}"/>

                                    <!-- Resume Upload Section -->
                                    <TextBlock Text="Resume Upload" Style="{StaticResource FieldLabel}" Margin="0,20,0,6"/>
                                    <Border Background="#1E293B" CornerRadius="12" Padding="20" BorderBrush="#334155" BorderThickness="1" Margin="0,0,0,16">
                                        <StackPanel>
                                            <TextBlock Text="📄 Upload Your Resume" Foreground="White" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                            <TextBlock Text="Accepted formats: PDF, DOCX, DOC (Max 10MB)" Foreground="#94A3B8" FontSize="11" Margin="0,0,0,12"/>
                                            <TextBlock x:Name="ResumeFileNameText" Text="No file selected" Foreground="#64748B" FontSize="13" Margin="0,0,0,12"/>

                                            <StackPanel Orientation="Horizontal">
                                                <Button x:Name="UploadResumeBtn" Click="UploadResumeBtn_Click" Content="📎 Choose File" Background="#3B82F6" Foreground="White" FontWeight="SemiBold" FontSize="13" Height="40" Width="140" Margin="0,0,12,0" BorderThickness="0" Cursor="Hand" Style="{StaticResource NavButtonStyle}"/>
                                                <Button x:Name="RemoveResumeBtn" Click="RemoveResumeBtn_Click" Content="✕ Remove" Background="#EF4444" Foreground="White" FontWeight="SemiBold" FontSize="13" Height="40" Width="120" BorderThickness="0" Cursor="Hand" Visibility="Collapsed" Style="{StaticResource NavButtonStyle}"/>
                                            </StackPanel>

                                            <TextBlock x:Name="ResumeUploadStatus" Text="" Foreground="#10B981" FontSize="12" FontWeight="SemiBold" Margin="0,12,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="S/D/W of *" Style="{StaticResource FieldLabel}"/>
                                    <TextBox x:Name="FatherNameBox" Style="{StaticResource RoundedTextBoxStyle}"/>

                                    <TextBlock Text="Father's Profession *" Style="{StaticResource FieldLabel}"/>
                                    <TextBox x:Name="FatherProfessionBox" Style="{StaticResource RoundedTextBoxStyle}"/>

                                    <TextBlock Text="Date *" Style="{StaticResource FieldLabel}"/>
                                    <DatePicker x:Name="DateBox" Style="{StaticResource RoundedDatePickerStyle}"/>

                                    <TextBlock Text="Age *" Style="{StaticResource FieldLabel}"/>
                                    <TextBox x:Name="AgeBox" Style="{StaticResource RoundedTextBoxStyle}"/>

                                    <TextBlock Text="Email *" Style="{StaticResource FieldLabel}"/>
                                    <TextBox x:Name="EmailBox" Style="{StaticResource RoundedTextBoxStyle}"/>

                                    <TextBlock Text="Address *" Style="{StaticResource FieldLabel}"/>
                                    <TextBox x:Name="AddressBox" Style="{StaticResource RoundedTextBoxStyle}" Height="135" AcceptsReturn="True" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Grid>

                            
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Step 2 Panel -->
                <StackPanel x:Name="Step2Panel" Visibility="Collapsed">
                    <Border Style="{StaticResource SectionCard}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                <Border Background="#9AFF00" Width="40" Height="40" CornerRadius="20" Margin="0,0,12,0">
                                    <TextBlock Text="💻" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Technical Information" Style="{StaticResource SectionTitle}" Margin="0"/>
                                    <TextBlock Text="Share your technical expertise" Foreground="#888888" FontSize="12"/>
                                </StackPanel>
                            </StackPanel>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="How do you rate yourself in OOP?" Style="{StaticResource FieldLabel}"/>
                                    <ComboBox x:Name="OopRatingBox" ItemsSource="{StaticResource FiveRatings}" SelectedIndex="0" Style="{StaticResource DarkComboBoxStyle2}"/>

                                    <TextBlock Text="How do you rate yourself in SQL?" Style="{StaticResource FieldLabel}"/>
                                    <ComboBox x:Name="SqlRatingBox" ItemsSource="{StaticResource FiveRatings}" SelectedIndex="0" Style="{StaticResource DarkComboBoxStyle2}"/>

                                    <TextBlock Text="How do you rate yourself in UI?" Style="{StaticResource FieldLabel}"/>
                                    <ComboBox x:Name="UiRatingBox" ItemsSource="{StaticResource FiveRatings}" SelectedIndex="0" Style="{StaticResource DarkComboBoxStyle2}"/>

                                    <TextBlock Text="Are you currently employed?" Style="{StaticResource FieldLabel}"/>
                                    <ComboBox x:Name="EmployedBox" ItemsSource="{StaticResource YesNoOptions}" SelectedIndex="0" Style="{StaticResource DarkComboBoxStyle2}"/>

                                    <TextBlock Text="Your current company (if any)" Style="{StaticResource FieldLabel}"/>
                                    <TextBox x:Name="CompanyBox" Style="{StaticResource RoundedTextBoxStyle}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Why are you leaving your current position?" Style="{StaticResource FieldLabel}"/>
                                    <TextBox x:Name="LeavingReasonBox" Style="{StaticResource RoundedTextBoxStyle}" 
                                             Height="80" AcceptsReturn="True" TextWrapping="Wrap"/>

                                    <TextBlock Text="Why do you want this job?" Style="{StaticResource FieldLabel}"/>
                                    <TextBox x:Name="JobReasonBox" Style="{StaticResource RoundedTextBoxStyle}" 
                                             Height="80" AcceptsReturn="True" TextWrapping="Wrap"/>

                                    <TextBlock Text="How many times you see the watch in a day?" Style="{StaticResource FieldLabel}"/>
                                    <TextBox x:Name="WatchCountBox" Style="{StaticResource RoundedTextBoxStyle}"/>
                                </StackPanel>
                            </Grid>

                            <TextBlock Text="Tell about your professional challenges and how you resolved them" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="ChallengesBox" Style="{StaticResource RoundedTextBoxStyle}" 
                                     Height="100" AcceptsReturn="True" TextWrapping="Wrap"/>

                            <Grid Margin="0,12,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Tell about your strengths" Style="{StaticResource FieldLabel}"/>
                                    <TextBox x:Name="StrengthsBox" Style="{StaticResource RoundedTextBoxStyle}" 
                                             Height="80" AcceptsReturn="True" TextWrapping="Wrap"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Tell about your weaknesses" Style="{StaticResource FieldLabel}"/>
                                    <TextBox x:Name="WeaknessesBox" Style="{StaticResource RoundedTextBoxStyle}" 
                                             Height="80" AcceptsReturn="True" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Step 3 Panel -->
                <StackPanel x:Name="Step3Panel" Visibility="Collapsed">
                    <Border Style="{StaticResource SectionCard}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                <Border Background="#9AFF00" Width="40" Height="40" CornerRadius="20" Margin="0,0,12,0">
                                    <TextBlock Text="💼" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Work Experience" Style="{StaticResource SectionTitle}" Margin="0"/>
                                    <TextBlock Text="Your professional background" Foreground="#888888" FontSize="12"/>
                                </StackPanel>
                            </StackPanel>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Which framework have you worked with?" Style="{StaticResource FieldLabel}"/>
                                    <TextBox x:Name="FrameworkBox" Style="{StaticResource RoundedTextBoxStyle}"/>

                                    <TextBlock Text="Your experience duration" Style="{StaticResource FieldLabel}"/>
                                    <ComboBox x:Name="ExperienceBox" ItemsSource="{StaticResource ExperienceRating}" SelectedIndex="0" Style="{StaticResource DarkComboBoxStyle2}"/>

                                    <TextBlock Text="Your current salary" Style="{StaticResource FieldLabel}"/>
                                    <TextBox x:Name="SalaryBox" Style="{StaticResource RoundedTextBoxStyle}"/>

                                    <TextBlock Text="How much willing do you have for this job?" Style="{StaticResource FieldLabel}"/>
                                    <ComboBox x:Name="WillingnessBox" ItemsSource="{StaticResource WillingnessOptions}" SelectedIndex="0" Style="{StaticResource DarkComboBoxStyle2}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Education from which institute?" Style="{StaticResource FieldLabel}"/>
                                    <TextBox x:Name="EducationBox" Style="{StaticResource RoundedTextBoxStyle}"/>

                                    <TextBlock Text="Your CGPA?" Style="{StaticResource FieldLabel}"/>
                                    <TextBox x:Name="CgpaBox" Style="{StaticResource RoundedTextBoxStyle}"/>

                                    <TextBlock Text="Your professional goals for next 5 years" Style="{StaticResource FieldLabel}"/>
                                    <TextBox x:Name="GoalsBox" Style="{StaticResource RoundedTextBoxStyle}" 
                                             Height="120" AcceptsReturn="True" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Footer Navigation -->
        <Border Grid.Row="2" Background="#111111" Padding="30,20" BorderBrush="#222222" BorderThickness="0,1,0,0">
            <Grid>
                <Button Content="🏠 Back Home" 
                        Height="44" 
                        HorizontalAlignment="Left" 
                        Width="140" 
                        Background="#2A2A2A"
                        Foreground="White"
                        BorderThickness="1"
                        BorderBrush="#444444"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Click="Button_Click"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="BackBtn" 
                            Content="← Back" 
                            Click="BackBtn_Click" 
                            Style="{StaticResource SecondaryButtonStyle}" 
                            Visibility="Collapsed"
                            Width="120"
                            Height="44"/>
                    <Button x:Name="NextBtn" 
                            Content="Next →" 
                            Click="NextBtn_Click" 
                            Style="{StaticResource AccentButtonStyle}"
                            Width="120"
                            Height="44"/>
                    <Button x:Name="SubmitBtn" 
                            Content="✓ Submit" 
                            Click="SubmitBtn_Click" 
                            Style="{StaticResource AccentButtonStyle}" 
                            Visibility="Collapsed"
                            Width="140"
                            Height="44"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>