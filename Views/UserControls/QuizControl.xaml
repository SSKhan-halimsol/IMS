<UserControl x:Class="IMS.Views.QuizControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#0A0A0A"
             MinWidth="700" MinHeight="500">

    <UserControl.Resources>
        <!-- Glow button style -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0f0f0f"/>
            <Setter Property="Foreground" Value="#92d400"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="#92d400"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#92d400" BlurRadius="10" ShadowDepth="0" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1E1E1E"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#92d400" BlurRadius="15" ShadowDepth="0" Opacity="0.8"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Radio button option style -->
        <Style x:Key="OptionButtonStyle" TargetType="RadioButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,8,0,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="#121212" CornerRadius="6" Padding="10,8">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="16" Height="16" Stroke="#92d400" StrokeThickness="1.5"
                                         Margin="0,0,10,0"/>
                                <ContentPresenter/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- Welcome screen -->
        <Grid x:Name="WelcomeScreen" Visibility="Visible">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock x:Name="WelcomeText"
                           FontSize="30"
                           FontWeight="Bold"
                           Foreground="#92d400"
                           Text="Welcome!! Ready for Quiz?"
                           TextAlignment="Center"/>
                <Button Content="Start Quiz"
                        Width="160" Height="45"
                        Style="{StaticResource NavButtonStyle}"
                        Click="StartQuiz_Click"/>
            </StackPanel>
        </Grid>

        <!-- Quiz screen -->
        <Grid x:Name="QuizScreen" Visibility="Collapsed" Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Orientation="Vertical">
                <TextBlock x:Name="ProgressText"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#92d400"
                           Text="Question 1 of 10"
                           Margin="0,0,0,8"/>

                <!-- Timer progress bar -->
                <ProgressBar x:Name="TimerBar"
                             Height="8"
                             Minimum="0"
                             Maximum="15"
                             Value="15"
                             Foreground="#92d400"
                             Background="#222"
                             BorderThickness="0"/>
            </StackPanel>

            <!-- Question and options -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock x:Name="QuestionText"
                               FontSize="18"
                               Foreground="White"
                               FontWeight="SemiBold"
                               TextWrapping="Wrap"
                               Margin="0,0,0,20"/>
                    <StackPanel x:Name="OptionsPanel" Orientation="Vertical"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Navigation -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,20,0,0">
                <Button x:Name="BackBtn"
                        Content="Back"
                        Width="100" Height="35"
                        Style="{StaticResource NavButtonStyle}"
                        Click="BackBtn_Click"/>
                <Button x:Name="NextBtn"
                        Content="Next"
                        Width="100" Height="35"
                        Style="{StaticResource NavButtonStyle}"
                        Click="NextBtn_Click"/>
                <Button x:Name="SubmitBtn"
                        Content="Submit"
                        Width="120" Height="35"
                        Style="{StaticResource NavButtonStyle}"
                        Visibility="Collapsed"
                        Click="SubmitBtn_Click"/>
            </StackPanel>

            <TextBlock x:Name="MarksBox"
                       Foreground="#92d400"
                       FontSize="14"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Bottom"
                       Margin="0,10,0,0"/>
        </Grid>
    </Grid>
</UserControl>
