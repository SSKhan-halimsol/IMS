<UserControl x:Class="IMS.Views.QuizControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#1E1E1E" MinWidth="600" MinHeight="420"
             BorderBrush="Transparent">

    <Grid>
        <!-- Welcome Screen -->
        <Grid x:Name="WelcomeScreen" Visibility="Visible">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock x:Name="WelcomeText"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="#92d400"
                           Text="Welcome!"
                           TextAlignment="Center"
                           Margin="0,0,0,20"/>
                <Button Content="Start Quiz"
                        Width="150"
                        Height="40"
                        Style="{StaticResource NavButtonStyle}"
                        Click="StartQuiz_Click"/>
            </StackPanel>
        </Grid>

        <!-- Quiz Screen -->
        <Grid x:Name="QuizScreen" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Progress -->
            <TextBlock x:Name="ProgressText"
                       Grid.Row="0"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#92d400"
                       Margin="0,0,0,10"
                       Text="Question 1 of 10"/>

            <!-- Scrollable content -->
            <ScrollViewer x:Name="MainScrollViewer"
                          Grid.Row="1"
                          VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Question -->
                    <TextBlock x:Name="QuestionText"
                               Text="Sample Question"
                               FontSize="16" Foreground="#92d400" FontWeight="SemiBold" Margin="0,0,0,20"/>

                    <!-- Options -->
                    <StackPanel x:Name="OptionsPanel" Orientation="Vertical">
                        <RadioButton Content="A" Style="{StaticResource OptionButtonStyle}"/>
                        <RadioButton Content="B" Style="{StaticResource OptionButtonStyle}"/>
                        <RadioButton Content="C" Style="{StaticResource OptionButtonStyle}"/>
                        <RadioButton Content="D" Style="{StaticResource OptionButtonStyle}"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
            <TextBlock x:Name="MarksBox" Foreground="White" FontSize="10"/>
            <!-- Navigation buttons -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,15,0,0">
                <Button x:Name="BackBtn"
                        Content="Back"
                        Width="100"
                        Height="35"
                        Margin="5"
                        Style="{StaticResource NavButtonStyle}"
                        Click="BackBtn_Click"/>

                <Button x:Name="NextBtn"
                        Content="Next"
                        Width="100"
                        Height="35"
                        Margin="5"
                        Style="{StaticResource NavButtonStyle}"
                        Click="NextBtn_Click"/>

                <Button x:Name="SubmitBtn"
                        Content="Submit"
                        Width="120"
                        Height="35"
                        Margin="5"
                        Visibility="Collapsed"
                        Style="{StaticResource NavButtonStyle}"
                        Click="SubmitBtn_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>